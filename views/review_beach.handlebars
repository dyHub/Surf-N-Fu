        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href={{mapLink}}>Map</a></li>
                <li><a href={{weatherLink}}>Weather</a></li>
                <li class="active"><a href="#">Reviews</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">

    <div class="row" style="padding-top:50px">
        <h1>{{beachName}}</h1>
        <br/><br/><br/>
        <div class="col-sm-6"><img src={{image}} height="400px" width="500px"/></div>
        <div class="col-sm-4">
            <div class="row">
                <img src="/images/cloud.png" height="200px" width="220px"/>
            </div>
            <div id="temperature-text">73Â°F</div>
