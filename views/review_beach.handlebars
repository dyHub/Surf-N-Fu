<!doctype html>

<html>
<head>
    <title>COGS120/CSE170 Skeleton</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">

    <link href = "/css/review.css" rel="stylesheet">

    <script src="../js/review.js"></script>

</head>

<body>
<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand text-uppercase" href="#">{{activity}}</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href={{mapLink}}>Map</a></li>
                <li><a href={{weatherLink}}>Weather</a></li>
                <li class="active"><a href="#">Reviews</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">

    <div class="row" style="padding:50px">
        <h1>{{beachName}}</h1>

    </div>
    <div>
        <p id="displayStatus">Current Status:<p>
        <p id="currStatus">Unknown</p>
    </div>

    <br>

    <!-- Crowd source buttons -->
    <a type="button" class="btn btn-lg btn-primary" onclick="return emptyFunc()">Empty</a>
    <a type="button" class="btn btn-lg btn-primary" onclick="slightlyFunc();">Slightly Crowded</a>
    <a type="button" class="btn btn-lg btn-primary" onclick="crowdedFunc();">Crowded</a>

    <p> *This page is crowd-sourced and will display the status that has the most votes.</p>

</div>

<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>

</body>
</html>