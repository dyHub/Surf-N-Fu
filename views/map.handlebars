            });

            var marker{{id}} = new google.maps.Marker({
                               position: coord{{id}},
                               map: map
                   //icon: 'http://maps.google.com/mapfiles/ms/icons/blue-dot.png'
            });

            marker{{id}}.addListener('click', function() {
              infowindow.open(map, marker{{id}});
            });
{{/each}}
